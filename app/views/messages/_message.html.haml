.message
  .message__info
    .message__info__user-name
      = message.user.name
    .message__info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__content' if message.image.present?


