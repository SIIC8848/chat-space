.chat-main
  .group__info
    .group__info__left
      .group__info__left__current-group
        = @group.name
      .group__info__left__member-list
        Member :
        - @group.users.each do |user|
          = user.name
    
    -# .group__info__edit-btn
    = link_to edit_group_path(@group), class: "group__info__edit-btn" do
      Edit
  .messages
    = render @messages

  .form
    = form_for [@group, @message], class: "form__form" do |f|
      .form__text
        = f.text_field :content, class: 'form__text__box', placeholder: 'type a message'
        = f.label :image, class: 'form__text__image' do
          = icon('fas', 'image', class: 'icon')
        = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit-btn'